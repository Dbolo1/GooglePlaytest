<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_grid1"
            android:padding="5dp"
            android:background="@drawable/grid_item_bg_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@drawable/ic_default"
                android:id="@+id/iv_category_icon1"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/tv_category_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_grid2"
            android:padding="5dp"
            android:background="@drawable/grid_item_bg_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@drawable/ic_default"
                android:id="@+id/iv_category_icon2"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/tv_category_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_grid3"
            android:padding="5dp"
            android:background="@drawable/grid_item_bg_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            <ImageView
                android:src="@drawable/ic_default"
                android:id="@+id/iv_category_icon3"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/tv_category_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>